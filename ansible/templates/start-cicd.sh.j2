#!/bin/bash
# CI/CD Pipeline Startup Script
# Generated by Ansible

set -e

PROJECT_DIR="{{ project_dir }}"
cd "$PROJECT_DIR"

echo "========================================="
echo "Starting Local CI/CD Pipeline"
echo "========================================="

# Check if Docker is running
if ! docker info >/dev/null 2>&1; then
    echo "âŒ Docker is not running. Please start Docker first."
    exit 1
fi

# Check if ports are available
check_port() {
    if netstat -tuln | grep -q ":$1 "; then
        echo "âš ï¸  Port $1 is already in use"
        return 1
    fi
    return 0
}

echo "ğŸ” Checking port availability..."
PORTS_OK=true
for port in 3000 8080 5000; do
    if ! check_port $port; then
        PORTS_OK=false
    fi
done

if [ "$PORTS_OK" = false ]; then
    echo "âŒ Some required ports are in use. Please free them first."
    echo "   Use: sudo lsof -i :PORT to find what's using a port"
    exit 1
fi

# Create directories if they don't exist
echo "ğŸ“ Creating data directories..."
make setup

# Start services
echo "ğŸš€ Starting services..."
make start

echo ""
